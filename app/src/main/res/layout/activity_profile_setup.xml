<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSetup"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Set Up Profile"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textColor="#000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aaa"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:src="@drawable/home"
                android:id="@+id/tvfn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:id="@+id/ethome"
                android:hint="Home"
                android:textSize="20dp"
                android:maxLines="1"
                android:textColor="#000"
                android:layout_marginStart="90dp"/>
            <ImageView
                android:src="@drawable/relation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tvlm"
                android:layout_below="@id/tvfn"
                android:layout_marginStart="20dp"/>

            <Spinner
                android:id="@+id/etrelation"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ethome"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:entries="@array/Relation"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/education"
                android:layout_marginTop="20dp"
                android:id="@+id/tvc"
                android:layout_below="@id/tvlm"
                android:layout_marginStart="20dp"/>

            <Spinner
                android:id="@+id/eteducation"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/etrelation"
                android:layout_marginTop="25dp"
                android:layout_marginStart="90dp"
                android:entries="@array/Education"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tve"
                android:layout_below="@id/tvc"
                android:src="@drawable/age"
                android:layout_marginStart="20dp"/>

            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:id="@+id/etage"
                android:layout_below="@id/tvc"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textColor="#000"
                android:layout_marginStart="90dp"/>
            </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/saveprofile"
        android:src="@drawable/match"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    </LinearLayout>